<h1>Users#new</h1>

<form action="/users" method="post" accept-charset="UTF-8" class="login_form">
  <input type="hidden" name="authenticity_token" value="<%= 
form_authenticity_token %>">

  <input type="text" id="username" name="user[username]" 
value="<%= @user.username %>" placeholder="Username"><br>

  <input type="text" id="email" name="user[email]" value="<%= @user.email 
%>" placeholder="Email"><br>

  <input type="password" id="password" name="user[password]" 
value="<%= @user.password %>" placeholder="Password"><br>
  
  <input type="submit" value="Submit" class="submit_button">
</form>
